<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settings_tv" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="settings_sw" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#C16DF1</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FFFFFF</item>
    </style>

    <style name="buttonst" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/buttonst</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/paddingfb</item>
        <item name="android:paddingRight">@dimen/paddingfb</item>
        <item name="android:paddingTop">@dimen/paddingtb</item>
        <item name="android:paddingBottom">@dimen/paddingtb</item>
    </style>

    <style name="buttonstv2" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>

        <item name="android:background">@drawable/buttonstv2</item>
        <item name="android:textColor">#525252</item>
        <item name="android:paddingLeft">@dimen/paddingfb</item>
        <item name="android:paddingRight">@dimen/paddingfb</item>
        <item name="android:paddingTop">@dimen/paddingtb</item>
        <item name="android:paddingBottom">@dimen/paddingtb</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
